<div class="container">
    <h1>本を検索</h1>
    <%= form_with url: searches_path, method: :get, local: true do |f| %>
        <div class="form-group">
            <%= f.label :keyword %>
            <%= f.text_field :keyword, class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
    <% end %>
</div>