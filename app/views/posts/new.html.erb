<h1>新規投稿</h1>

<%= form_with(model: @post, class:"form-horizontal")  do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :comment_public %>
        <%= f.text_field :comment_public, class: "form-control"%>
    </div>
    <div class="form-group">
        <%= f.label :comment_private %>
        <%= f.text_field :comment_private, class: "form-control"%>
    </div>
    <%= f.submit class: "btn btn-primary" %>

<% end %>