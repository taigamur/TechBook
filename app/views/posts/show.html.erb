<div class="row post_show">
    <div class="col-md-1"></div>
    <div class="col-md-7">
        <h5><%= User.find(@post.user_id).name%></h5>
    
        <h5><%= @post.name %><h5>

        
        <%= @post.author %>
        
        Point: <%= @post.point %>
        Difficulty: <%= @post.difficulty %>
    </div>
    <div class="col-md-3">
        <%= image_tag @post.image_url , :width => '100%'%>
    </div>
    <div class="col-md-1"></div>
</div>


<div class="row post_show_comment">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <h3>Public Comment</h3> 
        <div>
            <%= @post.content_public %>
        </div>

        <% if @post.user_id == current_user.id %>
            <h3>Private Comment</h3>
            <div>
                <%= @post.content_private %>
            </div>
        <% end %>

        <% if @post.user_id == current_user.id %>
            <div class="option-btn">
                <%= link_to "Edit", edit_post_path(@post) , class: "btn btn-outline-secondary" %>
                <%= link_to "Delete", post_path(@post), method: :delete , data: {confirm: "Do you want to delete this postï¼Ÿ" }, class: "btn btn-outline-danger" %>
            </div>
        <% end %>
    </div>
    <div class="col-md-1"></div>
</div>