<div class="row post_show">
    <div class="col-md-3 post_show_profile">
        <%= link_to user_path(id: @post.user_id) do %>
            <% if User.find(@post.user_id).image.attached? %>
                <%= image_tag User.find(@post.user_id).image, class:"prof_image_post_show" %>
            <% end %>
            <h5><%= User.find(@post.user_id).name%></h5>
        <% end %>

    </div>
    <div class="col-md-6">
        <h5><%= @post.name %><h5>

        <%= @post.author %>
        <div class="rate-space ">
            <span class="difficulty">difficulty:<span>
            <span class="rate rate<%= @post.difficulty %>"><span>
        </div>    
        <div class="rate-space">
            <span class="vaolume">volume:<span>
            <span class="rate rate<%= @post.volume %>"><span>
        </div>                    
        <div class="rate-space">
            <span class="recommendation">recommendation:<span>
            <span class="rate rate<%= @post.point %>"><span>
        </div>

        <span class="post_time"><%= get_elapsed_time(@post.created_at) %><span>

        <h5 class="post_show_comment">Comment</h5> 
        <div>
            <%= @post.content_public %>
        </div>
        <% if @post.user_id == current_user.id %>
            <div class="option-btn">
                <%= link_to "https://twitter.com/share?url=#{request.url}
                    &text=TechBookCareer%0A#{truncate(User.find(@post.user_id).name, :length => 30)}さんが技術書をレビューしました%0A#{truncate(@post.name, :length => 50)}%0A" do %>           
                    <button type="button" class="btn btn-outline-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                        </svg>
                        share
                    </button>
                <% end %>
                <%= link_to "Edit", edit_post_path(@post) , class: "btn btn-outline-secondary" %>
                <%= link_to "Delete", post_path(@post), method: :delete , data: {confirm: "Do you want to delete this post？" }, class: "btn btn-outline-danger" %>
            </div>
        <% end %>
    </div>
    <div class="col-md-2">
        <%= image_tag @post.image_url , :width => '100%'%>
    </div>
    <div class="col-md-2"></div>
</div>
