<div class="container">

    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 user_profile">

            <h5 class="user_name"><%= @user.name %></h5>
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                    <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                    <path fill-rule="evenodd" d="M5.216 14A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216z"/>
                    <path d="M4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z"/>
                </svg>
                <%= @user.following.count %>
                <%= link_to "following", "#" %>
                ãƒ»
                <%= @user.followers.count %>
                <%= link_to "followers", '#' %>
            </div>
            <%= render 'follow_form' %>

        </div>

        <div class="col-lg-8 col-md-8 col-sm-12">
            <h3><span class="badge badge-secondary"><%= @posts.size %> Posts</span></h3>

            <div class="post-list">
                <% @posts.each do |post| %>
                    <div class="post-each">
                        <%= link_to(post, class:" action") do %>
                            <div class="row">
                                <div class="col-md-4 col-sm-6">
                                    <% if post.image_url != nil %>                             
                                        <%= image_tag post.image_url, :width => '100%'%>
                                    <% end %>
                                </div>
                                <div class="col-md-6 col-sm-6">
                                <%= post.name %>
                                <%= post.author %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                <% end %>
            </div>
        <div>
    </div>
</div>